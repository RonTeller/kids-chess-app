{
  "name": "kids-chess-app",
  "version": "1.0.0",
  "description": "A chess teaching app for kids",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently \"vite\" \"npm run electron:compile && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && npm run electron:compile && electron-builder",
    "lint": "eslint src --ext ts,tsx"
  },
  "dependencies": {
    "framer-motion": "^11.0.0",
    "i18next": "^25.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.kidschess.app",
    "productName": "Kids Chess",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
